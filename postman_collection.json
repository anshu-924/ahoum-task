{
  "info": {
    "name": "Sessions Marketplace API",
    "description": "Complete API collection for Sessions Marketplace backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "OAuth Login (Google)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/oauth/login/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"google\",\n  \"access_token\": \"your-google-access-token\",\n  \"role\": \"user\"\n}"
            }
          }
        },
        {
          "name": "OAuth Login (GitHub)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/oauth/login/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"github\",\n  \"access_token\": \"your-github-access-token\",\n  \"role\": \"creator\"\n}"
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/token/refresh/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/auth/logout/"
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/sessions/"
          }
        },
        {
          "name": "Get Session Detail",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/sessions/1/"
          }
        },
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/sessions/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Python Web Development\",\n  \"description\": \"Learn Django\",\n  \"category\": \"Programming\",\n  \"duration_minutes\": 60,\n  \"price\": \"49.99\",\n  \"currency\": \"USD\",\n  \"max_attendees\": 10,\n  \"location\": \"Online\",\n  \"session_type\": \"online\",\n  \"status\": \"published\"\n}"
            }
          }
        },
        {
          "name": "My Sessions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/sessions/my_sessions/"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/bookings/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session\": 1,\n  \"booking_date\": \"2025-01-15T10:00:00Z\",\n  \"attendees_count\": 2,\n  \"user_notes\": \"Looking forward!\"\n}"
            }
          }
        },
        {
          "name": "My Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/bookings/my_bookings/"
          }
        },
        {
          "name": "Active Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/bookings/active/"
          }
        },
        {
          "name": "Confirm Booking",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/bookings/1/confirm/"
          }
        }
      ]
    },
    {
      "name": "Dashboards",
      "item": [
        {
          "name": "User Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/dashboard/user/"
          }
        },
        {
          "name": "Creator Dashboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/dashboard/creator/"
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/users/me/"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/users/update_profile/",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"bio\": \"Developer\"\n}"
            }
          }
        }
      ]
    }
  ]
}
